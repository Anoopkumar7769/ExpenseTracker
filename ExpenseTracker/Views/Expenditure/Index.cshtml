@model IEnumerable<ExpenseTracker.Models.Expenditure>

    <div class="container p-3">
       @* <div asp-validation-summary="All" class="text-danger"></div>*@
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Expenses List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-controller="Expenditure" asp-action="Create" class="btn btn-primary">Create new Expense </a> 
            </div>
        </div>
        <br/>

        @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                         Name
                    </th>
                    <th>
                         Amount
                    </th>
                    <th>
                         Expense Type
                    </th>
                    <th>
                         Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Expenditure in Model)
               {
                   <tr>
                       <td width="23%">@Expenditure.ExpenditureName</td>
                       <td width="23%">@Expenditure.ExpenditureAmount</td>
                       <td width="23%">@Expenditure.ExpenditureType.Name</td>
                       <td width="31%">
                           <div class="w-100 btn-group" role="group">
                                     <a asp-controller="Expenditure" asp-action="Update" asp-route-Id="@Expenditure.Id" class="btn btn-primary mx-1">Update</a>
                                     <a asp-controller="Expenditure" asp-action="Delete" asp-route-Id="@Expenditure.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                       </td>
                   </tr>
               }
            </tbody>
        </table>
    }
    else
    {
        <p>No Expenses created yet</p>
    }
    </div>