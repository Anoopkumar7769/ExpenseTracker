@model ExpenseTracker.Models.Expenditure

<form method="post" asp-action="Update">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Expense</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ExpenditureName"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="ExpenditureAmount"></label>
                    </div>
                      <div class="col-4">
                       <label asp-for="ExpenditureType"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="ExpenditureName" class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="ExpenditureAmount" class="form-control" />
                    </div>
                    <div class="col-4">
                       <select asp-for="ExpenditureTypeId" asp-items="@ViewBag.TypeDropDown" class="form-control" >
                       <option>--Select Expense Type--</option> 
                       </select>
                       <span asp-validation-for="ExpenditureTypeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}